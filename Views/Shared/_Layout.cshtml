<!DOCTYPE html>
<html>
<head>
	<title>Contacts</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
    <!-- make your mobile web app more app like on iOS and Android devices  -->
	<meta name="apple-mobile-web-app-capable" content="yes"/>
	<link rel="shortcut icon" href="/favicon.ico" />
	<!-- iPhone & Android 2.2+ -->
	<link rel="apple-touch-icon" href="/icons/RnCIcon57x57.png" />
	<!-- iPhone 4 retina display -->
	<link rel="apple-touch-icon" sizes="114x114" href="/icons/RnCIcon114x114.png" />
	<!-- iPad & iPad 2 -->
	<link rel="apple-touch-icon" sizes="72x72" href="/icons/RnCIcon72x72.png" />
	<!-- iPad retina display -->
	<link rel="apple-touch-icon" sizes="144x144" href="/icons/RnCIcon144x144.png" />
	<!-- iPhone -->
	<link rel="apple-touch-startup-image" media="(device-width: 320px)" href="/icons/RnCSplash320x460.png" />
	<!-- iPhone (Retina) -->
	<link rel="apple-touch-startup-image"
	      media="(device-width: 320px) and (-webkit-device-pixel-ratio: 2)"
	      href="/icons/RnCSplash640x920.png" />
	<link href="/Content/jquery.mobile-1.3.0.css" rel="stylesheet" type="text/css" />
	<script src="/Scripts/Libraries/jquery-1.9.1.js" type="text/javascript"></script>
	<script src="/Scripts/Libraries/jquery.mobile-1.3.0.js" type="text/javascript"></script>
	<script type="text/template" id="contactlistview-template">
		<% _.each(Contacts, function(Contact) { %>
			<li class='Contact' id='contact<%= Contact.id %>'>
				<h3><%= Contact.firstName %>&nbsp;<%= Contact.lastName %></h3>
				<p><%= Contact.telephone %></p>
				<p><%= Contact.email %></p>
			</li>
		<% });%>
	</script>
	<script type="text/template" id="edit-template">
		<div data-role="fieldcontain">
			<label for="firstNameAddContact">First Name</label>
			<input type="text" id="firstNameAddContact" name="firstNameAddContact" class="inputdata" tabindex="1" value="<%= Contact.firstName %>"/>
			<label for="lastNameAddContact">Last Name</label>
			<input type="text" id="lastNameAddContact" name="lastNameAddContact" class="inputdata" tabindex="2" value="<%= Contact.lastName %>" />
			<label for="telephoneAddContact">Telephone</label>
			<input type="tel" id="telephoneAddContact" name="phoneAddContact" class="inputdata" tabindex="3" value="<%= Contact.telephone %>" />
			<label for="emailAddContact">E-mail</label>
			<input type="email" id="emailAddContact" name="emailAddContact" class="inputdata" tabindex="4" value="<%= Contact.email %>" />
		</div>
	</script>
</head>
	<body>
		@RenderBody()
	</body>
	<script src="/Scripts/Libraries/underscore-1.4.4.js" type="text/javascript"></script>
	<script src="/Scripts/Libraries/backbone-0.9.10.js" type="text/javascript"></script>
	<script src="/Scripts/application.js" type="text/javascript"></script>
	<script src="/Scripts/models.js" type="text/javascript"></script>
	<script src="/Scripts/collections.js" type="text/javascript"></script>
	<script src="/Scripts/views.js" type="text/javascript"></script>
	<script src="/Scripts/pages.js" type="text/javascript"></script>
</html>
